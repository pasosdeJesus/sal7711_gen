<div class="card">
  <div class="card-header"><%= Sal7711Gen::Articulo.human_attribute_name(:filtro) %></div>
  <div class="card-body">
    <%= render partial: 'index_inifiltro', locals: {f: f} %>

    <div class="rango-fechas">
      <div class="col-md-6">
        <%= f.input :fechaini,
          maxlength: 10,
          size: 12,
          label: false,
          placeholder: 'Desde',
          value: @fechaini, 
          input_html: {
            "data-behaviour": "datepicker",
            "data-contarautomatic": ""
          }
        %>
      </div>
      <div class="col-md-6">
        <%= f.input :fechafin,
          maxlength: 10,
          size: 12,
          label: false,
          placeholder: 'Hasta',
          required: false,
          value: @fechafin,
          input_html: {
            "data-behaviour": "datepicker",
            "data-contarautomatic": ""
          }
        %>
      </div>
      <%= f.input :meses_rapido, 
        collection: @meses,
        label: 'Meses',
        input_html: { class: 'multiselectuser', multiple: true},
        size: 7,
        required: false
      %>
    </div>

    <%= f.input :mundep,
      label: 'Municipio / Departamento',
      required: false,
      maxlength: 150
    %>
  <%= hidden_field_tag 'mundep_id' %>

  <%= render partial: 'index_categoria', locals: {f: f} %>

  <%= f.input :fuente,
    collection: Msip::Fuenteprensa.habilitados,
    label: 'Fuente',
    label_method: :nombre,
    value_method: :id,
    include_blank: '',
    input_html: { class: 'chosen-select'},
    required: false
  %>

<%= render partial: 'index_pagina', locals: {f: f} %>

<%= f.button :button, id: 'buscar', class: 'btn btn-primary' do %>
  <%= fa_icon 'search', text: 'Buscar' %> 
<% end %>
<%= f.button :button, type: :reset, id: :limpiarfiltro do %>
  <%= fa_icon 'undo', text: 'Limpiar' %> 
<% end %>
<%= f.button :button, id: 'buscar_historial' do %>
  <%= fa_icon 'history', text: 'Historial' %> 
<% end %>
<br>
  </div>
</div>
